# SmartHome Backend Environment Configuration
# Copy this file to .env and customize for your environment
# DO NOT commit .env to version control

# ==============================================================================
# DATABASE
# ==============================================================================
DATABASE_URL=postgres://postgres:pass@postgres:5432/smarthome?sslmode=disable

# ==============================================================================
# REDIS
# ==============================================================================
REDIS_ADDR=redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================================================
# MQTT BROKER
# ==============================================================================
MQTT_BROKER=tcp://mosquitto:1883
MQTT_CLIENT_ID=smarthome-engine
MQTT_USERNAME=
MQTT_PASSWORD=

# ==============================================================================
# JWT CONFIGURATION
# ==============================================================================
# Leave JWT_SECRET empty - it will be auto-generated on first run
# The generated secret will be saved back to your .env file
JWT_SECRET=

# ==============================================================================
# APPLICATION
# ==============================================================================
LOG_LEVEL=info
APP_PORT=5069

# Leave AGENT_ID empty - it will be auto-generated on first run
AGENT_ID=

# ==============================================================================
# REMOTE ACCESS
# ==============================================================================
# Enable/disable remote access bridge for external connections
REMOTE_ACCESS_ENABLED=true

# Public WebSocket server URL for remote access
REMOTE_ACCESS_WS_URL=ws://magonsky.scay.net:5069/agent

# Retry delay in seconds when connection fails
REMOTE_ACCESS_RETRY_DELAY=2

# ==============================================================================
# mDNS DISCOVERY
# ==============================================================================
# Local hostname for mDNS (e.g., smarthome.local)
MDNS_LOCAL_NAME=smarthome.local
